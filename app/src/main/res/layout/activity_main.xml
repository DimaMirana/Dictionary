<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/book"
    tools:context="com.example.rafsan.dictionary.MainActivity">

    <EditText
        android:id="@+id/Edit_text_search"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="#e6d3d3"
       />
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/Edit_text_search"
        android:text="Search"/>
    <TextView
        android:id="@+id/text_word"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Edit_text_search"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/text_meaning"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_word"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btn_synonim"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_meaning"
        android:text="Synonims"
        android:onClick="senonym"/>
    <TextView
        android:id="@+id/text_syno1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_synonim"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/text_syno2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_syno1"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/text_syno3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_syno2"
        />
    <Button
        android:id="@+id/btn_option"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_syno3"
        android:text="Options"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="320dp"
        android:onClick="option"/>






</RelativeLayout>
