<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood"

    >
<TextView
    android:id="@+id/text_options"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="OPTIONS"
    android:layout_marginLeft="90dp"
    android:textStyle="bold"
    android:textSize="50dp"
    />
    <Button
        android:id="@+id/btn_history"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:text="history"
        android:textSize="20dp"
        android:layout_below="@id/text_options"
        android:onClick="history"
        />
    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="quiz"
        android:textSize="20dp"
        android:layout_below="@id/btn_history"
        android:onClick="quiz"
        />
    <Button
        android:id="@+id/btn_point"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="MARKS"
        android:textSize="20dp"
        android:layout_below="@id/btn_quiz"
        android:onClick="marks"
        />

</RelativeLayout>
