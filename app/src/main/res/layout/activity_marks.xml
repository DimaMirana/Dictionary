<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_marks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/text_marks"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Marks!!!"
        android:textSize="50dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/text_correctAns1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Correct Answer:"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@id/text_marks"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/text_correctAns2"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:textSize="20dp"

        android:layout_below="@id/text_marks"
        android:layout_toRightOf="@id/text_correctAns1"
        android:layout_marginTop="100dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/text_wrongAns1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Wrong Answer:"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@id/text_correctAns1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_wrongAns2"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:textSize="20dp"

        android:layout_below="@id/text_correctAns2"
        android:layout_toRightOf="@id/text_wrongAns1"
        android:layout_marginTop="10dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/text_marks1"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:textSize="20dp"

        android:layout_below="@id/text_wrongAns1"
        android:layout_toRightOf="@id/text_marks1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Total Marks:"/>
    <TextView
        android:id="@+id/text_marks2"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:textSize="20dp"

        android:layout_below="@id/text_wrongAns2"
        android:layout_toRightOf="@id/text_marks1"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

</RelativeLayout>
